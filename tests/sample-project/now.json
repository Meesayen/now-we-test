{
  "version": 2,
  "builds": [
    {
      "src": "lambdas/*.js",
      "use": "@now/node"
    },
    {
      "src": "lambda.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/lambdas/index.js"
    },
    {
      "src": "/custom/path/(?<id>.*)",
      "dest": "/lambdas/$id"
    },
    {
      "src": "/custom-path",
      "methods": ["GET"],
      "dest": "/lambdas/simple.js"
    }
  ]
}
